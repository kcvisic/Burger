<div class ="container >

<div class="row">
<h2 class="textStyle">Create a Burger</h2>
<form class="create-form">
<div class="form-group">
  <label for="burg"></label>
  <input type="text" id="burg" name="name" placeholder="Place an order">
</div>
<button id="submitBtn" type="submit"><strong>Submit</strong></button>
</form>
</div>

<div class="row">
<div class="col-md-6">
<h2 class="textStyle">Ready to be devoured!</h2>
<ul>
{{#each burgers}}
{{#unless devoured}}
<li>

<button class="eatBurger"  data-id="{{id}}" data-aboutToBeEaten="{{devoured}}">
  <strong>  {{#if devoured}}Yum!{{else}}{{burger_name}}{{/if}}</strong>
</button>
</li>
{{/unless}}
{{/each}}
</ul>
</div>


<div class="col-md-6">
<h1 class="textStyle">Devoured!</h1>
<ul>
{{#each burgers}}
{{#if devoured}}
<li>

<button class="clearBurger" data-id="{{this.id}}" data-aboutToBeEaten="{{devoured}}">
<strong>{{#if devoured}}{{burger_name}}{{else}}Eat me{{/if}}</strong><span id="glif" class="glyphicon glyphicon-remove" ></span>
</button>
</li>
{{/if}}
{{/each}}
</ul>
</div>
</div>

</div>
