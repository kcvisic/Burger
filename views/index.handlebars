<div class ="container >

<div class="row">
<h2>Add a Burger</h2>
<form class="create-form">
<div class="form-group">
  <label for="burg">Place an order:</label>
  <input type="text" id="burg" name="name">
</div>
<button type="submit">Submit</button>
</form>
</div>

<div class="row">
<div class="col-md-6">
<h2>Ready to be devoured!</h2>
<ul>
{{#each burgers}}
{{#unless devoured}}
<li> 

<button class="eatBurger"  data-id="{{id}}" data-aboutToBeEaten="{{devoured}}">
    {{#if devoured}}Yum!{{else}}{{burger_name}}{{/if}}
</button>
</li>
{{/unless}}
{{/each}}
</ul>
</div>


<div class="col-md-6">
<h2>Devoured!</h2>
<ul>
{{#each burgers}}
{{#if devoured}}
<li> 

<button class="eatBurger" data-id="{{id}}" data-aboutToBeEaten="{{devoured}}">
    {{#if devoured}}{{burger_name}}{{else}}Eat me{{/if}}
</button>
</li>
{{/if}}
{{/each}}
</ul>
</div>
</div>

</div>
